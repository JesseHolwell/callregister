<Window x:Class="NAB_Register.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAB_Register"
        mc:Ignorable="d"
        Title="NAB Call Register - Home" Height="110" Width="380" Background="#FFA50000" Icon="Icons/nab.ico">
    <Grid x:Name="context">
        <Button x:Name="btnNewCall" Content="New Call" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50" Margin="10,10,0,0" Click="btnNewCall_Click"/>
        <Button x:Name="btnCallList" Content="Call List" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50" Margin="130,10,0,0" Click="btnCallList_Click"/>
        <Button x:Name="btnSettings" Content="Settings" Margin="250,10,0,0" VerticalAlignment="Top" Height="50" HorizontalAlignment="Left" Width="100" Click="btnSettings_Click"/>
    </Grid>
</Window>
