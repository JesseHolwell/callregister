<Window x:Class="NAB_Register.Management.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAB_Register.Management"
        mc:Ignorable="d"
        Title="Login" MinWidth="300" MinHeight="150" Width="300" Height="150" WindowStyle="ToolWindow" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblUsername" HorizontalContentAlignment="Right" Content="Username:" Margin="10,10,10,0" VerticalAlignment="Top" Height="26"/>
        <Label x:Name="lblPassword" HorizontalContentAlignment="Right" Content="Password:" Margin="10,36,10,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="txtUsername" Grid.Column="1" Height="23" Margin="10,14,24,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Margin="10,40,24,0" VerticalAlignment="Top" Height="22" Grid.Column="1"/>
        <Button x:Name="btnLogin" Content="Login" Grid.Column="1" Margin="0,0,102,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" Click="btnLogin_Click" IsDefault="True"/>
        

    </Grid>
</Window>
